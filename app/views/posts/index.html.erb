
<%= render 'layouts/title' %>

<div class="col-sm-8 blog-main">

  <!-- Post Content -->
  <div class="blog-post" data-no-turbolink>
  	<% @posts.each do |post| %>
    	<h3 class="blog-post-title"><%= link_to post.title, post_path(post)  %></h3>
		  <p class="blog-post-meta"><%= post.created_at.strftime("%e %B %Y") %></p>
    	<p><%= post.body.html_safe %></p>

      <p><%= link_to "Comments", post_path(post, anchor: "disqus_thread")  %></p>
    	<hr>
      <br>      
    <% end %>



  </div><!-- /.blog-post -->

  <%= will_paginate %>	  

</div><!-- /.blog-main -->

<%= render 'layouts/sidebar' %>